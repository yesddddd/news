}	



//sso注册
function register(){
	window.open (sso_url+"/user/register","newwindow", window_site);
}

//sso登录
function ssologin(){
	window.open(sso_url + "/user/ssoLogin?code=" + authCode + "&redirectUrl=" + login_out + "sso/setCookie.html?", "newwindow", window_site);
}

